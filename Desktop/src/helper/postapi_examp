 <script>

        document.getElementById('loginForm').addEventListener('submit', async function (event) {
            event.preventDefault();

            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            if (!username || !password) {
                const messageBox = document.getElementById('message');
                messageBox.style.color = 'red';
                messageBox.textContent = window.string.text('missingInput');
                return;
            }


            const messageBox = document.getElementById('message');
            messageBox.style.color = 'red';
            messageBox.textContent = `Gửi yêu cầu đăng nhập đến: ${window.api.LOGIN}`;
            try {

                const response = await fetch(window.api.LOGIN, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();

                if (response.ok) {
                    messageBox.style.color = 'green';
                    messageBox.textContent = 'Đăng nhập thành công!';

                } else {
                    messageBox.style.color = 'red';
                    messageBox.textContent = data.message || 'Đăng nhập thất bại.';
                }
            } catch (error) {
                console.error('Lỗi khi đăng nhập:', error);
                messageBox.style.color = 'red';
                messageBox.textContent = 'Có lỗi xảy ra. Vui lòng thử lại.';
            }
        });
    </script>